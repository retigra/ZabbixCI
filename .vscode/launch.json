    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Pull",
            "type": "debugpy",
            "request": "launch",
            "module": "zabbixci.cli",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "args": ["pull", "-v", "--config", "config.yaml"]
        },
        {
            "name": "Python Debugger: Push",
            "type": "debugpy",
            "request": "launch",
            "module": "zabbixci.cli",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "args": ["push", "-v", "--config", "config.yaml"]
        }
    ]
}